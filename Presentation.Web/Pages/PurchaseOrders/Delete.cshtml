@page "{id:Guid}"
@model Presentation.Web.Pages.PurchaseOrders.DeleteModel
@{
    ViewData["Title"] = "Delete Purchase Order";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title mb-0"><i class="fas fa-trash me-2"></i>Delete Purchase Order</h1>
        </div>
        <div class="card-body p-4">
            <h4>Are you sure you want to delete this purchase order?</h4>
            <dl class="row">
                <dt class="col-sm-2">Vendor</dt>
                <dd class="col-sm-10">@Model.PurchaseOrder.VendorName</dd>
                <dt class="col-sm-2">Order Date</dt>
                <dd class="col-sm-10">@Model.PurchaseOrder.OrderDate.ToShortDateString()</dd>
                <dt class="col-sm-2">Total Amount</dt>
                <dd class="col-sm-10">$@Model.PurchaseOrder.TotalAmount.ToString("F2")</dd>
            </dl>

            <form method="post">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Delete</button>
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
            </form>
        </div>
    </div>
</div>
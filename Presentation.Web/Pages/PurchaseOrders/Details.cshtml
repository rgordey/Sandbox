@page "{id:Guid}"
@model Presentation.Web.Pages.PurchaseOrders.DetailsModel
@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Purchase Order Details</h1>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-2">Vendor</dt>
                <dd class="col-sm-10">@Model.PurchaseOrder.VendorName</dd>
                <dt class="col-sm-2">Order Date</dt>
                <dd class="col-sm-10">@Model.PurchaseOrder.OrderDate.ToShortDateString()</dd>
                <dt class="col-sm-2">Total Amount</dt>
                <dd class="col-sm-10">$@Model.PurchaseOrder.TotalAmount.ToString("F2")</dd>
            </dl>

            <h5 class="mb-3"><i class="fas fa-list me-2"></i>Order Details</h5>
            <table class="table table-bordered table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Line Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.PurchaseOrder.OrderDetails)
                    {
                        <tr>
                            <td>@detail.ProductName</td>
                            <td>@detail.Quantity</td>
                            <td>$@detail.UnitPrice.ToString("F2")</td>
                            <td>$@(detail.Quantity* detail.UnitPrice).ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                <a asp-page="./Edit" asp-route-id="@Model.PurchaseOrder.Id" class="btn btn-warning"><i class="fas fa-edit me-2"></i>Edit</a>
            </div>
        </div>
    </div>
</div>
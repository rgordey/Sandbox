@page "{id:guid}"
@model Presentation.Web.Pages.Vendors.DetailsModel

@{
    ViewData["Title"] = "Vendor Details";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="mb-0"><i class="fas fa-eye me-2"></i>Vendor Details</h1>
            <div>
                <a asp-page="Edit" asp-route-id="@Model.Vendor?.Id" class="btn btn-outline-primary btn-sm me-2"><i class="fas fa-edit me-1"></i>Edit</a>
                <a asp-page="Index" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i>Back to List</a>
            </div>
        </div>
        <div class="card-body p-4">
            @if (Model.Vendor == null)
            {
                <div class="alert alert-warning" role="alert">
                    Vendor not found.
                </div>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Vendor.Id</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Vendor.Name</dd>

                    <dt class="col-sm-3">Contact Email</dt>
                    <dd class="col-sm-9">@Model.Vendor.ContactEmail</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">
                        @if (Model.Vendor.Address != null)
                        {
                            <address>
                                <strong>Street:</strong> @Model.Vendor.Address.Line1<br />
                                <strong>City:</strong> @Model.Vendor.Address.City<br />
                                <strong>State:</strong> @Model.Vendor.Address.State<br />
                                <strong>Zip Code:</strong> @Model.Vendor.Address.ZipCode
                            </address>
                        }
                        else
                        {
                            <span>No address provided</span>
                        }
                    </dd>
                </dl>
            }
        </div>
    </div>
</div>
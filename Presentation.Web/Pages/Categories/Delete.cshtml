@page "{id:guid}"
@model Presentation.Web.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="fas fa-trash-alt me-2 fs-4"></i>
            <h2 class="mb-0">Delete Category</h2>
        </div>
        <div class="card-body p-4">
            <p class="alert alert-warning">Are you sure you want to delete this category? This action cannot be undone.</p>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash me-1"></i>Delete</button>
                    <a asp-page="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

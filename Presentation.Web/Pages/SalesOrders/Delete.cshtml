@page
@using Presentation.Web.Pages.SalesOrders
@model Presentation.Web.Pages.SalesOrders.DeleteModel

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h1 class="card-title mb-0"><i class="fas fa-trash me-2"></i>Delete Order</h1>
        </div>
        <div class="card-body p-4">
            <h4 class="mb-4">Are you sure you want to delete this order?</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Order.OrderDate" class="form-label">Order Date</label>
                    <div class="form-control-plaintext">@Model.Order.OrderDate.ToShortDateString()</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Order.TotalAmount" class="form-label">Total Amount</label>
                    <div class="form-control-plaintext">@Model.Order.TotalAmount.ToString("C")</div>
                </div>
            </div>

            <form method="post">
                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
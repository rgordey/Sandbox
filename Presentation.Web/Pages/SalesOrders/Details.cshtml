@page
@using Presentation.Web.Pages.SalesOrders
@model Presentation.Web.Pages.SalesOrders.DetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title mb-0"><i class="fas fa-eye me-2"></i>Order Details</h1>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Order.OrderDate" class="form-label">Order Date</label>
                    <div class="form-control-plaintext">@Model.Order.OrderDate.ToShortDateString()</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Order.TotalAmount" class="form-label">Total Amount</label>
                    <div class="form-control-plaintext">@Model.Order.TotalAmount.ToString("C")</div>
                </div>
            </div>

            <h5 class="mb-3"><i class="fas fa-list me-2"></i>Order Details</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.Order.OrderDetails)
                    {
                        <tr>
                            <td>@detail.ProductName</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.UnitPrice.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                <a asp-page="./Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Edit</a>
            </div>
        </div>
    </div>
</div>
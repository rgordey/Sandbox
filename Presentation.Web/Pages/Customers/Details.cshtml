@page
@model Presentation.Web.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h1 class="card-title mb-0"><i class="fas fa-user me-2"></i>Customer Details</h1>
        </div>
        <div class="card-body p-4">
            <!-- Personal Information Section -->
            <h5 class="mb-3"><i class="fas fa-user me-2"></i>Personal Information</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.FullName" class="form-label">Full Name</label>
                    <div class="form-control-plaintext">@Model.Customer.FullName</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.Email" class="form-label">Email</label>
                    <div class="form-control-plaintext">@Model.Customer.Email</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.PhoneNumber" class="form-label">Phone Number</label>
                    <div class="form-control-plaintext">@Model.Customer.PhoneNumber</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Customer.CustomerType" class="form-label">Customer Type</label>
                    <div class="form-control-plaintext">@Model.Customer.CustomerType</div>
                </div>
            </div>

            <!-- Type-Specific Details Section -->
            <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Type-Specific Details</h5>
            @if (Model.Customer.CustomerType == "Residential")
            {
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.FirstName" class="form-label">First Name</label>
                        <div class="form-control-plaintext">@Model.Customer.FirstName</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.LastName" class="form-label">Last Name</label>
                        <div class="form-control-plaintext">@Model.Customer.LastName</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.IsSeniorDiscountEligible" class="form-label">Senior Discount Eligible</label>
                        <div class="form-control-plaintext">@Model.Customer.IsSeniorDiscountEligible</div>
                    </div>
                </div>
            }
            else if (Model.Customer.CustomerType == "Corporate")
            {
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.CompanyName" class="form-label">Company Name</label>
                        <div class="form-control-plaintext">@Model.Customer.CompanyName</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.EmployeeCount" class="form-label">Employee Count</label>
                        <div class="form-control-plaintext">@Model.Customer.EmployeeCount</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Industry" class="form-label">Industry</label>
                        <div class="form-control-plaintext">@Model.Customer.Industry</div>
                    </div>
                </div>
            }
            else if (Model.Customer.CustomerType == "Government")
            {
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.AgencyName" class="form-label">Agency Name</label>
                        <div class="form-control-plaintext">@Model.Customer.AgencyName</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Department" class="form-label">Department</label>
                        <div class="form-control-plaintext">@Model.Customer.Department</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.IsFederal" class="form-label">Is Federal</label>
                        <div class="form-control-plaintext">@Model.Customer.IsFederal</div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">No type-specific details available.</p>
            }

            <!-- Mailing Address Section -->
            <h5 class="mb-3"><i class="fas fa-mail-bulk me-2"></i>Mailing Address</h5>
            @if (Model.Customer.MailingAddress != null)
            {
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.MailingAddress.Line1" class="form-label">Street</label>
                        <div class="form-control-plaintext">@Model.Customer.MailingAddress.Line1</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.City" class="form-label">City</label>
                        <div class="form-control-plaintext">@Model.Customer.MailingAddress.City</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.State" class="form-label">State</label>
                        <div class="form-control-plaintext">@Model.Customer.MailingAddress.State</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.ZipCode" class="form-label">Zip Code</label>
                        <div class="form-control-plaintext">@Model.Customer.MailingAddress.ZipCode</div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">No mailing address provided.</p>
            }

            <!-- Shipping Address Section -->
            <h5 class="mb-3"><i class="fas fa-shipping-fast me-2"></i>Shipping Address</h5>
            @if (Model.Customer.ShippingAddress != null)
            {
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.ShippingAddress.Line1" class="form-label">Street</label>
                        <div class="form-control-plaintext">@Model.Customer.ShippingAddress.Line1</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.City" class="form-label">City</label>
                        <div class="form-control-plaintext">@Model.Customer.ShippingAddress.City</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.State" class="form-label">State</label>
                        <div class="form-control-plaintext">@Model.Customer.ShippingAddress.State</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.ZipCode" class="form-label">Zip Code</label>
                        <div class="form-control-plaintext">@Model.Customer.ShippingAddress.ZipCode</div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">No shipping address provided.</p>
            }

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                <a asp-page="./Edit" asp-route-id="@Model.Customer.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Edit</a>
            </div>
        </div>
    </div>
</div>
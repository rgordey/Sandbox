@page
@model Presentation.Web.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}



<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title mb-0"><i class="fas fa-user-edit me-2"></i>Edit Customer</h1>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="Customer.Id" />
                <input type="hidden" asp-for="Customer.SequentialNumber" />

                <div class="form-group mb-3">
                    <label asp-for="Customer.CustomerType" class="control-label"><i class="fas fa-user-tag me-1"></i>Customer Type</label>
                    <select asp-for="Customer.CustomerType" class="form-control" id="customerTypeSelect" disabled>
                        <option value="Residential" selected="@(Model.Customer.CustomerType == "Residential")">Residential</option>
                        <option value="Corporate" selected="@(Model.Customer.CustomerType == "Corporate")">Corporate</option>
                        <option value="Government" selected="@(Model.Customer.CustomerType == "Government")">Government</option>
                    </select>
                    <span asp-validation-for="Customer.CustomerType" class="text-danger"></span>
                </div>

                <div id="customerNumberField" class="form-group mb-3" style="display: none;">
                    <label asp-for="Customer.CustomerNumber" class="form-label">Customer #</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                        <input asp-for="Customer.CustomerNumber" class="form-control" readonly="readonly" />
                    </div>
                    <span asp-validation-for="Customer.CustomerNumber" class="text-danger"></span>
                </div>

                <!-- Name Field (for non-Residential) -->
                

                <div id="nameField" class="form-group mb-3" style="display: none;">
                    <label asp-for="Customer.FullName" class="form-label">Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                        <input asp-for="Customer.FullName" class="form-control" />
                    </div>
                    <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                </div>

                <!-- Residential Fields -->
                <div id="residentialFields" style="display: none;">
                    <h4>Residential Details</h4>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.FirstName" class="control-label"><i class="fas fa-user me-1"></i>First Name</label>
                        <input asp-for="Customer.FirstName" class="form-control" />
                        <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.LastName" class="control-label"><i class="fas fa-user me-1"></i>Last Name</label>
                        <input asp-for="Customer.LastName" class="form-control" />
                        <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="Customer.IsSeniorDiscountEligible" class="form-check-input" type="checkbox" />
                        <label asp-for="Customer.IsSeniorDiscountEligible" class="form-check-label">Senior Discount Eligible</label>
                    </div>
                </div>

                <!-- Corporate Fields -->
                <div id="corporateFields" style="display: none;">
                    <h4>Corporate Details</h4>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.CompanyName" class="control-label"><i class="fas fa-building me-1"></i>Company Name</label>
                        <input asp-for="Customer.CompanyName" class="form-control" />
                        <span asp-validation-for="Customer.CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.EmployeeCount" class="control-label"><i class="fas fa-users me-1"></i>Employee Count</label>
                        <input asp-for="Customer.EmployeeCount" class="form-control" type="number" />
                        <span asp-validation-for="Customer.EmployeeCount" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.Industry" class="control-label"><i class="fas fa-industry me-1"></i>Industry</label>
                        <input asp-for="Customer.Industry" class="form-control" />
                        <span asp-validation-for="Customer.Industry" class="text-danger"></span>
                    </div>
                </div>

                <!-- Government Fields -->
                <div id="governmentFields" style="display: none;">
                    <h4>Government Details</h4>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.AgencyName" class="control-label"><i class="fas fa-building me-1"></i>Agency Name</label>
                        <input asp-for="Customer.AgencyName" class="form-control" />
                        <span asp-validation-for="Customer.AgencyName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Customer.Department" class="control-label"><i class="fas fa-sitemap me-1"></i>Department</label>
                        <input asp-for="Customer.Department" class="form-control" />
                        <span asp-validation-for="Customer.Department" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="Customer.IsFederal" class="form-check-input" type="checkbox" />
                        <label asp-for="Customer.IsFederal" class="form-check-label">Is Federal</label>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Customer.Email" class="control-label"><i class="fas fa-envelope me-1"></i>Email</label>
                    <input asp-for="Customer.Email" class="form-control" />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Customer.PhoneNumber" class="control-label"><i class="fas fa-phone me-1"></i>Phone Number</label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
                <!-- Mailing Address Section -->
                <h5 class="mb-3"><i class="fas fa-mail-bulk me-2"></i>Mailing Address</h5>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Search Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input id="mailingAutocomplete" class="form-control" placeholder="Enter address" />
                        </div>
                        <div id="mailingLoadError" class="text-danger mt-2" style="display:none;">Failed to load Mailing Address autocomplete. Check console for details.</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.MailingAddress.Line1" class="form-label">Line 1</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-road"></i></span>
                            <input asp-for="Customer.MailingAddress.Line1" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.Line1" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.MailingAddress.Line2" class="form-label">Line 2</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-road"></i></span>
                            <input asp-for="Customer.MailingAddress.Line2" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.Line2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.City" class="form-label">City</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-city"></i></span>
                            <input asp-for="Customer.MailingAddress.City" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.State" class="form-label">State</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input asp-for="Customer.MailingAddress.State" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.ZipCode" class="form-label">Zip Code</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                            <input asp-for="Customer.MailingAddress.ZipCode" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.MailingAddress.Country" class="form-label">Country</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                            <input asp-for="Customer.MailingAddress.Country" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.MailingAddress.Country" class="text-danger"></span>
                    </div>
                </div>

                <!-- Shipping Address Section -->
                <h5 class="mb-3"><i class="fas fa-shipping-fast me-2"></i>Shipping Address</h5>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Search Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input id="shippingAutocomplete" class="form-control" placeholder="Enter address" />
                        </div>
                        <div id="shippingLoadError" class="text-danger mt-2" style="display:none;">Failed to load Shipping Address autocomplete. Check console for details.</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.ShippingAddress.Line1" class="form-label">Line 1</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-road"></i></span>
                            <input asp-for="Customer.ShippingAddress.Line1" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.Line1" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Customer.ShippingAddress.Line2" class="form-label">Line 2</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-road"></i></span>
                            <input asp-for="Customer.ShippingAddress.Line2" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.Line2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.City" class="form-label">City</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-city"></i></span>
                            <input asp-for="Customer.ShippingAddress.City" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.State" class="form-label">State</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input asp-for="Customer.ShippingAddress.State" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.ZipCode" class="form-label">Zip Code</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                            <input asp-for="Customer.ShippingAddress.ZipCode" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Customer.ShippingAddress.Country" class="form-label">Country</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                            <input asp-for="Customer.ShippingAddress.Country" class="form-control" />
                        </div>
                        <span asp-validation-for="Customer.ShippingAddress.Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function initAutocompletes() {
            if (typeof google === 'undefined' || typeof google.maps === 'undefined' || typeof google.maps.places === 'undefined') {
                console.error('Google Maps API or Places library failed to load. Check API key, Places API enabled, billing, or script URL.');
                document.getElementById('mailingLoadError').style.display = 'block';
                document.getElementById('shippingLoadError').style.display = 'block';
                return;
            }

            // Mailing Autocomplete setup
            var mailingAutocomplete;
            try {
                mailingAutocomplete = new google.maps.places.Autocomplete(
                    document.getElementById('mailingAutocomplete'),
                    { types: ['address'] }
                );
                mailingAutocomplete.setFields(['address_components', 'formatted_address']);
            } catch (error) {
                console.error('Failed to initialize Mailing Autocomplete:', error);
                document.getElementById('mailingLoadError').style.display = 'block';
                return;
            }

            mailingAutocomplete.addListener('place_changed', function() {
                var place = mailingAutocomplete.getPlace();
                console.log('Mailing Address Data:', place);
                if (!place) {
                    console.error('Mailing place is undefined');
                    return;
                }
                if (!place.address_components) {
                    console.error('Mailing address_components is undefined, using input value');
                    var inputValue = document.getElementById('mailingAutocomplete').value;
                    document.getElementById('Customer_MailingAddress_Line1').value = inputValue.split(',')[0].trim() || '';
                    return;
                }

                document.getElementById('Customer_MailingAddress_Line1').value = '';
                document.getElementById('Customer_MailingAddress_Line2').value = '';
                document.getElementById('Customer_MailingAddress_City').value = '';
                document.getElementById('Customer_MailingAddress_State').value = '';
                document.getElementById('Customer_MailingAddress_ZipCode').value = '';
                document.getElementById('Customer_MailingAddress_Country').value = '';

                let streetAddress = '';
                place.address_components.forEach(component => {
                    console.log('Mailing Component:', component.types, component.long_name);
                    if (component.types.includes('street_number') || component.types.includes('route')) {
                        streetAddress += (component.long_name || '') + ' ';
                    } else if (component.types.includes('subpremise')) {
                        document.getElementById('Customer_MailingAddress_Line2').value = component.long_name || '';
                    } else if (component.types.includes('locality') || component.types.includes('sublocality')) {
                        document.getElementById('Customer_MailingAddress_City').value = component.long_name || '';
                    } else if (component.types.includes('administrative_area_level_1')) {
                        document.getElementById('Customer_MailingAddress_State').value = component.short_name || '';
                    } else if (component.types.includes('postal_code')) {
                        document.getElementById('Customer_MailingAddress_ZipCode').value = component.long_name || '';
                    } else if (component.types.includes('country')) {
                        document.getElementById('Customer_MailingAddress_Country').value = component.long_name || '';
                    }
                });

                document.getElementById('Customer_MailingAddress_Line1').value = streetAddress.trim() || (place.formatted_address ? place.formatted_address.split(',')[0].trim() : '');
            });

            // Shipping Autocomplete setup
            var shippingAutocomplete;
            try {
                shippingAutocomplete = new google.maps.places.Autocomplete(
                    document.getElementById('shippingAutocomplete'),
                    { types: ['address'] }
                );
                shippingAutocomplete.setFields(['address_components', 'formatted_address']);
            } catch (error) {
                console.error('Failed to initialize Shipping Autocomplete:', error);
                document.getElementById('shippingLoadError').style.display = 'block';
                return;
            }

            shippingAutocomplete.addListener('place_changed', function() {
                var place = shippingAutocomplete.getPlace();
                console.log('Shipping Address Data:', place);
                if (!place) {
                    console.error('Shipping place is undefined');
                    return;
                }
                if (!place.address_components) {
                    console.error('Shipping address_components is undefined, using input value');
                    var inputValue = document.getElementById('shippingAutocomplete').value;
                    document.getElementById('Customer_ShippingAddress_Line1').value = inputValue.split(',')[0].trim() || '';
                    return;
                }

                document.getElementById('Customer_ShippingAddress_Line1').value = '';
                document.getElementById('Customer_ShippingAddress_Line2').value = '';
                document.getElementById('Customer_ShippingAddress_City').value = '';
                document.getElementById('Customer_ShippingAddress_State').value = '';
                document.getElementById('Customer_ShippingAddress_ZipCode').value = '';
                document.getElementById('Customer_ShippingAddress_Country').value = '';

                let streetAddress = '';
                place.address_components.forEach(component => {
                    console.log('Shipping Component:', component.types, component.long_name);
                    if (component.types.includes('street_number') || component.types.includes('route')) {
                        streetAddress += (component.long_name || '') + ' ';
                    } else if (component.types.includes('subpremise')) {
                        document.getElementById('Customer_ShippingAddress_Line2').value = component.long_name || '';
                    } else if (component.types.includes('locality') || component.types.includes('sublocality')) {
                        document.getElementById('Customer_ShippingAddress_City').value = component.long_name || '';
                    } else if (component.types.includes('administrative_area_level_1')) {
                        document.getElementById('Customer_ShippingAddress_State').value = component.short_name || '';
                    } else if (component.types.includes('postal_code')) {
                        document.getElementById('Customer_ShippingAddress_ZipCode').value = component.long_name || '';
                    } else if (component.types.includes('country')) {
                        document.getElementById('Customer_ShippingAddress_Country').value = component.long_name || '';
                    }
                });

                document.getElementById('Customer_ShippingAddress_Line1').value = streetAddress.trim() || (place.formatted_address ? place.formatted_address.split(',')[0].trim() : '');
            });
        }

        function tryInitAutocompletes() {
            if (typeof google !== 'undefined' && google.maps && google.maps.places) {
                initAutocompletes();
            } else {
                setTimeout(tryInitAutocompletes, 500);  // Retry every 500ms
            }
        }

        window.addEventListener('load', tryInitAutocompletes);
        tryInitAutocompletes();  // Start immediately

        // Show fields based on CustomerType (disable select since type is not changeable)
        document.addEventListener('DOMContentLoaded', function () {
            var type = '@Model.Customer.CustomerType';
            document.getElementById('customerTypeSelect').value = type;
            document.getElementById('residentialFields').style.display = (type === 'Residential') ? 'block' : 'none';
            document.getElementById('corporateFields').style.display = (type === 'Corporate') ? 'block' : 'none';
            document.getElementById('governmentFields').style.display = (type === 'Government') ? 'block' : 'none';
            document.getElementById('nameField').style.display = (type !== 'Residential') ? 'block' : 'none';
            document.getElementById('customerNumberField').style.display = 'block';
        });
    </script>
}